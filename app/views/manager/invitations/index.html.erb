<div class="container-fluid">
  <div class="row pt-1 pb-1">
    <div class="col-lg-3"></div>
    <div class="col-lg-6" id="manager-invitations">
      <div class="manager-invitation">
        <%= form_with model: [:manager, @new_invitation] do |f| %>
          <div class="display-4 mb-2 text-success">Nová pozvánka</div>
          <div class="form-group">
            <%= f.label :name, 'Meno na pozvánke' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <span class="mr-2">
              <%= f.check_box :accepted %>
            <%= f.label :accepted, 'Príde' %>
            </span>
          <span class="mr-2">
              <%= f.check_box :overnight %>
            <%= f.label :overnight, 'Prespí' %>
          </span>
          <div class="text-right">
            <%= f.submit 'Uložiť' %>
          </div>
        <% end %>
      </div>
      <% @invitations.each do |inv| %>
        <%= render 'manager/invitations/invitation', invitation: inv %>
      <% end %>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>
